{
    "version": 2,
    "builds": [
      { "src": "pages/api/**/*.js", "use": "@vercel/node" },
      { "src": "src/app/backend/*.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" }
    ],
    "functions": {
      "src/app/backend/chatbot.py": {
        "runtime": "python3.9"
      }
    }
  }
  